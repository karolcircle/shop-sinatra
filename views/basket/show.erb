<table class="table table-hover">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Price</th> 
    <th>Quantity</th>
    <th>Total price Net</th>
    <th>Total price Gross</th>
  </tr>

  <% basket.each do |b| %>

  <tr>
   <td><%= b[:product].id %></td>
   <td><%= b[:product].name %></td>
   <td><%= b[:product].price %></td>
   <td><%= b[:quantity] %></td>
   <td><%= b[:total_price] %></td>
   <td><%= b[:total_price_gross] %></td>
   <td>
     <form action="/basket" method="post">
      <input type="hidden" name="product_id" value=<%= b[:product].id %>>
      <input type="hidden" name="_method" value="DELETE">
      <input type="number" name="quantity" value=1>
      <input type="submit" value="Remove from basket">
    </form></td>
  </tr>

  <% end %>

  <tr>
    <td> Net sum </td>
    <td><%= net_sum %></td>
    <td> Gross sum </td>
    <td><%= gross_sum %></td>
  </tr>
  
</table>